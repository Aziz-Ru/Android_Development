<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EmptyViews" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <style name="ActionBar" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/yellow</item>
        <item name="color">#ff22</item>
    </style>
    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="color">@color/black</item>
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/khoyeri</item>
        <item name="background">@color/green</item>
    </style>
    <style name="my_button">
        <item name="android:textSize">18sp</item>
        <item name="android:text">Login</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blue</item>
    </style>
    <style name="Theme.EmptyViews" parent="Theme.AppCompat.Light.NoActionBar" />
</resources>